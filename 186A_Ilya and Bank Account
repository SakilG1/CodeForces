#include <bits/stdc++.h>
using namespace std;
#define lli long long int
int main()
{

    lli t = 1;
    //cin >> t;
    while (t--)
    {
        lli n;
        cin >> n;

        if(n>=0)
        {
            cout << n << endl;
        }
        else{
            lli n1, n2;
            n1 = n/10;
            n2 = -((abs(n/100)*10)+(abs(n%10)));

            n1 = max(n1, n2);

            cout << n1 << endl;
        }
    }
    return 0;
}
