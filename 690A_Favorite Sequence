#include <bits/stdc++.h>
using namespace std;

#define lli long long int
#define no cout<<"NO"<<endl
#define yes cout<<"YES"<<endl
#define inkj i, j, n, m, k, x, c
#define fn for(i=0; i<n; i++)
#define arr(n) lli arr[n]; fn{cin>>arr[i];}

void crack()
{
    lli inkj;
    cin >> n;
    arr(n)
    if(n%2==0)
    {
        x=n/2;
    }
    else{
        x = n/2 +1;
    }
    for(i=0, j=n-1; i<x; i++, j--)
    {
        if(i!=j)
        {
          cout << arr[i] << " " << arr[j] << " ";
        }
        else{
            cout << arr[i] << endl;
        }
    }
    

}

int main()
{
    lli test_case=1;
    cin >> test_case;
    while (test_case--)
    {
        crack();
    }
    return 0;
}
