#define yes cout<<"YES"<<endl
#define inkj i, j, n, m, k, x, c
#define fn for(i=0; i<n; i++)
#define arr(n) lli arr[n]; fn{cin>>arr[i];}

void crack()
{
    lli inkj;
    
    lli a, b;
    cin >> a >> b >> c;
    lli t1 = a-1;
    lli t2 = abs(b-c)+abs(c-1);
    if(t1<t2)
    {
        cout << 1 << endl;
    }
    else if(t2<t1)
    {
        cout << 2 << endl;
    }
    else{
        cout << 3 << endl;
    }

}

int main()
{
    lli test_case=1;
    cin >> test_case;
    while (test_case--)
    {
        crack();
    }
    return 0;
}
