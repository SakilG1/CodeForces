#include <bits/stdc++.h>
using namespace std;

#define lli long long int
#define no cout << "NO" << endl
#define yes cout << "YES" << endl
#define inkj i, j, n, m, k, x
#define fn for (i = 0; i < n; i++)
#define arr(n)  \
    lli arr[n]; \
    fn { cin >> arr[i]; }

void crack()
{
    lli inkj;

    cin >> n >> m;
    if(n%2==0)
    {
    i = n/2;
    }
    else{
        i = n/2 + 1;
    }
    lli c=0;
    for(i; i<=n; i++)
    {
        if(i%m==0)
        {
            cout << i << endl;
            c++;
            break;
        }
    }
    if(c==0)
    {
        cout << -1 << endl;
    }
}

int main()
{
    lli test_case = 1;
    // cin >> test_case;
    while (test_case--)
    {
        crack();
    }
    return 0;
}
