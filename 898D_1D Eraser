#include <bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin >> t;
    while (t--)
    {
        int n, k;
        cin >> n >> k;
        string str;
        cin >> str;
        int c = 0, i, j;

        for (i = 0; i < n; i++)
        {
            if (str[i] == 'B')
            {
                c++;
                i += k-1;
            }
        }
        cout << c << endl;
    }

    return 0;
}
