#include <bits/stdc++.h>
using namespace std;
#define lli long long int
#define fn for (i = 0; i < n; i++)
int main()
{
    lli t;
    cin >> t;
    while (t--)
    {
        lli a[3], n;
        cin >> a[0] >> a[1] >> a[2] >> n;
        sort(a, a+3);
        n = n- ((a[2]-a[0]) + (a[2]-a[1]));

        if(n%3==0 && n>=0)
        {
            cout << "YES" << endl;
        }
        else{
            cout << "NO" << endl;
        }

    }

    return 0;
}
