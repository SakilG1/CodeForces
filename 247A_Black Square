#include <bits/stdc++.h>
using namespace std;
#define lli long long int

int main()
{
    lli a[4];
    cin >> a[0] >> a[1] >> a[2] >> a[3];

    string str;
    lli i, x;
    cin >> str;
    x = str.length();
    lli c=0;

    for(i=0; i<x; i++)
    {
        if(str[i]=='1')
            c += a[0];
        else if(str[i]=='2')
            c += a[1];
        else if(str[i]=='3')
            c += a[2];
        else
            c += a[3];
    }

    cout << c << endl;

    return 0;
}
