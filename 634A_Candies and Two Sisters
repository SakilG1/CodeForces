#include<bits/stdc++.h>
using namespace std;
#define lli signed long long int
int main()
{

    lli t;
    cin >> t;
    while(t--)
    {
        lli n;
        cin >> n;
        if(n%2==0)
        {
            cout << (n/2)-1 << endl;
        }
        else{
            cout << n/2 << endl;
        }

    }


    return 0;
}
