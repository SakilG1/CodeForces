#include <bits/stdc++.h>
using namespace std;

#define lli long long int
#define no cout<<"NO"<<endl
#define yes cout<<"YES"<<endl
#define inkj i, j, n, m, k, x, c
#define fn for(i=0; i<n; i++)
#define arr(n) lli arr[n]; fn{cin>>arr[i];}

void crack()
{
    lli inkj;
    cin >> m >> n;
    if(m==n)
    {
        cout << 0 << endl;
    }
    else if(m<n)
    {
        if(m%2==0)
        {
            if(n%2==0)
            {
                cout << 2 << endl;
            }
            else{
                cout << 1 << endl;
            }
        }
        else{
            if(n%2!=0)
            {
                cout << 2 << endl;
            }
            else{
                cout << 1 << endl;
            }
        }
    }
    else{
        if(m%2==0)
        {
            if(n%2==0)
            {
                cout << 1 << endl;
            }
            else{
                cout << 2 << endl;
            }
        }
        else{
            if(n%2!=0)
            {
                cout << 1 << endl;
            }
            else{
                cout << 2 << endl;
            }
        }
    }

}

int main()
{
    lli test_case=1;
    cin >> test_case;
    while (test_case--)
    {
        crack();
    }
    return 0;
}
