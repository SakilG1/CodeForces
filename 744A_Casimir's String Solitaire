#include <bits/stdc++.h>
using namespace std;

#define lli long long int
#define no cout << "NO" << endl
#define yes cout << "YES" << endl
#define inkj i, j, n, m, k, x
#define fn for (i = 0; i < n; i++)
#define arr(n)  \
    lli arr[n]; \
    fn { cin >> arr[i]; }

void crack()
{
    lli inkj, a=0, b=0, c=0;
    string s;
    cin >> s;
    x = s.length();

    for(i=0; i<x; i++)
    {
        if(s[i]=='A')
        {
            a++;
        }
        else if(s[i]=='B')
        {
            b++;
        }
        else{
            c++;
        }

    }
        if(a+c==b){
            yes;
        }
        else{
            no;
        }
}

int main()
{
    lli test_case = 1;
    cin >> test_case;
    while (test_case--)
    {
        crack();
    }
    return 0;
}
