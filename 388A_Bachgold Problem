#include <bits/stdc++.h>
using namespace std;

#define lli long long int
#define inkj i, n, j, k, x, c
#define fn for(i=0; i<n; i++)
#define no cout<<"NO"<<endl
#define yes cout<<"YES"<<endl
#define arr(n) lli arr[n]; fn{cin>>arr[i];}

void crack()
{
    lli inkj;
    cin >> n;

    if(n%2==0)
    {
        cout << n/2 << endl;
        for(i=0; i<(n/2)-1; i++)
        {
            cout << 2 << " ";
        }
        cout << 2 << endl;
    }
    else if(n==3)
    {
        cout << 1 << endl;
        cout << 3 << endl;
    }
    else{
        cout << ((n-3)/2)+1 << endl << 3 << " ";
        for(i=0; i<((n-3)/2)-1; i++)
        {
            cout << 2 << " ";
        }
        cout << 2 << endl;
    }
}

int main()
{
    lli test_case=1;
    //cin >> test_case;
    while (test_case--)
    {
        crack();
    }
    return 0;
}
