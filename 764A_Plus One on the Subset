#include <bits/stdc++.h>
using namespace std;
#define lli long long int

int main()
{
    lli t;
    cin >> t;
    while(t--)
    {
        lli n, i;
        cin >> n;
        lli arr[n];

        for(i=0; i<n; i++)
        {
            cin >> arr[i];
        }
        sort(arr, arr+n);
        cout << arr[n-1]-arr[0] << endl;
    }
    return 0;
}
