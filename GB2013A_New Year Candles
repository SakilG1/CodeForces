#include <bits/stdc++.h>
using namespace std;

#define lli long long int
#define no cout << "NO" << endl
#define yes cout << "YES" << endl
#define inkj i, j, n, m, k, x
#define fn for (i = 0; i < n; i++)
#define arr(n)  \
    lli arr[n]; \
    fn { cin >> arr[i]; }

void crack()
{
    lli inkj;
    cin >> n >> m;
    x = n;
    while(n/m)
    {
        i = n/m;
        x += i;
        

        n = i+(n-(i*m));
    }
    cout << x << endl;
}

int main()
{
    lli test_case = 1;
    // cin >> test_case;
    while (test_case--)
    {
        crack();
    }
    return 0;
}
