#include<bits/stdc++.h>
using namespace std;
#define lli long long int
#define fn for(i=0; i<n; i++)
int main()
{
    lli i, n;
    cin >> n;

    for(i=1; i<n; i++)
    {
        if(i%2!=0)
        {
            cout << "I hate that ";
        }
        else{
            cout << "I love that ";
        }
    }

    if(i%2!=0)
        {
            cout << "I hate it" << endl;
        }
        else{
            cout << "I love it" << endl;
        }

    return 0;
}
