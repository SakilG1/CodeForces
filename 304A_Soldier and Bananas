#include <bits/stdc++.h>
using namespace std;
#define lli long long int
int main()
{
    lli k, n, w, sum = 0, i;
    cin >> k >> n >> w;

    for (i = 1; i <= w; i++)
    {
        sum = sum + k * i;
    }
    if (sum <= n)
    {
        cout << "0" << endl;
    }
    else
    {
        cout << sum - n << endl;
    }

    return 0;
}
