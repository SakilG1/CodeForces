#include <bits/stdc++.h>
using namespace std;

#define lli long long int
#define no cout<<"NO"<<endl
#define yes cout<<"YES"<<endl
#define inkj i, j, n, m, k, x, c
#define fn for(i=0; i<n; i++)
#define arr(n) lli arr[n]; fn{cin>>arr[i];}

void crack()
{
    double n, m;
    cin >> n >> m;
    if(n<=2)
    {
        cout << 1 << endl;
    }
    else{
        n -= 2.0;
        double nn = ceil(n/m);
        lli x = nn;
        cout << x+1 << endl;
    }
}

int main()
{
    lli test_case=1;
    cin >> test_case;
    while (test_case--)
    {
        crack();
    }
    return 0;
}
